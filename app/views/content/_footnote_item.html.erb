<li id="item_<%= footnote.basename %>" class="footnote item">
  <div class="item-image">
    <% if footnote.assets_for_placement(:primary).any? %>
      <%= link_to footnote_path(footnote.basename) do %>
        <%= simple_picture_tag(footnote.assets_for_placement(:primary)[0], :grid, :options => { :alt => "#{t('site.footnote_label')} #{footnote.footnote_number} â€” #{footnote.title}"}) %>
      <% end %>
    <% end %>
  </div> <!-- /.item-image -->
  <div class="item-content">
    <div class="item-header">
        <span class="marker issue"><%= t('site.footnote_abbr') + " " %> <%= footnote.footnote_number %></span>
        <h3 class="title"><%= link_to footnote.title, footnote_path(footnote.basename) %></h3>
      <i class="label"><%= editorial_flags(footnote) %></i>
    </div>
  </div> <!-- /.item-content -->
</li>
