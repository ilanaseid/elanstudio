<div class="span7 span-stepped">
  <div class="middle-header">
    <div class="item-meta">
      <%= product_status_span(product) %>
    </div> <!-- /.item-meta -->

    <div class="item-header">
      <b><%= link_to product.brand.title, brand_path(product.brand.basename), :class=>'brand' %></b>
      <h1 class="gamma"><%= product.title %></h1>
      <div class="accent archived-product-message"><%= t('product.archived_product_message')%></div>
      <div class="item-meta shop-designer">
        <div class="item-status"><%= t('product.shop_by_designer')%></div>
        <b><%= link_to product.brand.title, brand_path(product.brand.basename) %></b>
      </div> <!-- /.item-meta -->
      <div class="item-meta shop-categories">
        <div class="item-status"><%= t('product.shop_by_category')%></div>
        <b><%= link_to product.primary_category.titleize, main_app.shop_category_path(product.primary_category.downcase) %></b>
        <b><%= link_to product.first_subcategory.titleize, main_app.shop_category_path(product.first_subcategory.downcase) %></b>
      </div> <!-- /.item-meta -->
    </div> <!-- /.item-header -->
  </div> <!-- middle header -->
</div> <!-- span7 -->
