    <h2 class="gamma"><%= t('headings.share') %></h2>
    <ul class="buttons">
      <li><a class="btn popup_twitter social" href="https://twitter.com/share?url={{item_url}}&text={{tweet_text}}&via=<%= Settings.social_media.twitter_username %>&related=<%= Settings.social_media.twitter_username %>&dnt=true" rel="external" data-social-network="twitter" data-social-action="share" data-social-target="{{target}}"><%= t('actions.share_via_twitter') %></a></li>
      <li><a class="btn social" href="mailto:?subject={{email_subject}}&body={{email_body}}" data-social-network="email" data-social-action="share" data-social-target="{{target}}"><%= t('actions.share_via_email') %></a></li>
      <li><a class="btn popup_facebook social" href="http://www.facebook.com/sharer.php?u={{item_url}}" rel="external" data-social-network="facebook" data-social-action="share" data-social-target="{{target}}"><%= t('actions.share_via_facebook') %></a></li>
      <li><a class="btn social" data-social-network="pinterest" data-social-action="share" data-social-target="{{target}}" href="javascript:void((function()%7Bvar%20e=document.createElement(&apos;script&apos;);e.setAttribute(&apos;type&apos;,&apos;text/javascript&apos;);e.setAttribute(&apos;charset&apos;,&apos;UTF-8&apos;);e.setAttribute(&apos;src&apos;,&apos;//assets.pinterest.com/js/pinmarklet.js?r=&apos;+Math.random()*99999999);document.body.appendChild(e)%7D)());"><%= t('actions.share_via_pinterest') %></a></li>
    </ul>
  </div>
</script>

