  <%# in addtion to core opengraph - pinterest, etc %>
<meta property="og:type" content="article">
  <% if (article.default_content_block.content_assets.any?) %>
  <meta property="og:image" content="<%= article.default_content_block.content_assets[0].mounted_file.grid.url %>">
  <% end %>
  <meta property="article:published_time" content="<%= article.publish_at %>">
  <meta property="article:section" content="<%= section %>">
  <meta property="article:tag" content="<%= article.tags[0] %>">

  <%# twitter card stuff %>
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:site" content="@theline">
