/* Top Banner: Tadashi Okazaki
------------------------------------------- */
#top-banner-overlay {
  display: none;
  position: fixed;
  top: 0;
  width: 100%;
  height: 38px;
  z-index: 5;
  cursor: pointer;
  background-color: $gold;
  color: #FFF;
  text-align: center;
  .text {
    font-size: 12px;
    line-height: 38px;
    .hide-on-small {
      @media #{$query-small} {
        display: none;
      }
    }
  }
}
#top-banner {
  display: none;
  position: fixed;
  top: 0;
  background-color: rgba(255, 255, 255, 0.9);
  height: 38px;
  padding-top: 38px;
  width: 100%;
  z-index: 4;
  text-align: center;
  overflow-y: scroll;
  #top-banner-content {
    display: none;
    position: absolute;
    top: 38px;
    left: 0;
    width: 100%;
    height: calc(100% - 38px);
    background-color: rgba(0, 0, 0, 0.8);
    color: $white;
    background-image: url(<%= asset_path('modal/modalbg.jpg') %>);
    background-size: cover;
    background-position: center center;
    .apartment-logo {
      margin: 10px 0 60px 0;
      font-size: 22px;
      line-height: 24px;
      text-transform: uppercase;
      font-weight: normal;
      small {
        text-transform: none;
      }
    }
    h1.heading {
      font-size: 38px;
      line-height: 40px;
      margin-bottom: 10px;
      span {
        color: $gold;
        font-family: sans-serif;
        line-height: 80px;
      }
    }
    h2 {
      font-weight: normal;
      font-size: 26px;
      line-height: 28px;
    }
    .sub-heading {
      margin-top: 50px;
      margin-bottom: 10px;
      font-weight: normal;
    }
    p {
      margin: 0 auto;
      font-size: 14px;
      line-height: 20px;
    }
    p.intro {
      line-height: 22px;
      max-width: 400px;
    }
    p.promo-text {
      margin-top: 50px;
    }
    p:first-child {
      margin-bottom: 10px;
    }
    p.last {
      margin-bottom: 5px;
    }
    form {
      @extend .singlefield;
      margin-top: 10px;
      margin-bottom: 80px;
      input[type="submit"] {
        @extend .btn-em;
      }
    }
    #close-top-banner {
      position: absolute;
      top: 5px;
      right: 5px;
      width: 30px;
      height: 30px;
      text-transform: lowercase;
      font-weight: bold;
      font-size: 22px;
      line-height: 30px;
      // background-color: rgba(0, 0, 0, 0.5);
      cursor: pointer;
      font-family: sans-serif;
      font-weight: 300;
    }
    .valign {
      position: relative;
      top: 50%;
      -webkit-transform: translateY(-50%);
      -ms-transform: translateY(-50%);
      transform: translateY(-50%);
    }
    #top-banner-thankyou {
      display: none;
      h1.heading {
        margin-bottom: 50px;
      }
    }
  }
}

@media #{$query-small} {
  #top-banner {
    #top-banner-content {
      // height: auto;
      background-image: url(<%= asset_path('modal/modalbg-small.jpg') %>);
      .apartment-logo {
        font-size: 18px;
        line-height: 20px;
        margin: 15px 0 40px 0;
      }
      p {
        font-size: 14px;
      }
      p.promo-text {
        margin-top: 20px;
      }
      p:first-child {
        margin-bottom: 15px;
      }
      h1.heading {
        font-size: 20px;
        line-height: 22px;
        padding: 0px 5px 0 5px;
      }
      .sub-heading {
        font-size: 14px;
        line-height: 20px;
        margin-top: 20px;
        margin-bottom: 2px;

      }
      h2:not(.sub-heading) {
        font-size: 20px;
        line-height: 22px;
      }
      form {
        margin-bottom: 30px;
      }
    }
  }
}
