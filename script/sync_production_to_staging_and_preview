heroku pg:backups capture -a theline-production

heroku pg:reset DATABASE --confirm theline-staging -a theline-staging
heroku pg:backups restore `heroku pg:backups public-url -a theline-production` DATABASE -a theline-staging --confirm theline-staging

heroku pg:reset DATABASE --confirm theline-preview -a theline-preview
heroku pg:backups restore `heroku pg:backups public-url -a theline-production` DATABASE -a theline-preview --confirm theline-preview

script/mongo_script pull production
script/mongo_script push staging
script/mongo_script push preview
